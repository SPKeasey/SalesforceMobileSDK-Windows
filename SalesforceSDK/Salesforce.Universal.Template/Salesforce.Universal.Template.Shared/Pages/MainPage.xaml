<native:NativeMainPage
    x:Class="$safeprojectname$.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:native="using:Salesforce.SDK.Native"
    xmlns:sfdcStrings="using:Salesforce.SDK.Strings"
    mc:Ignorable="d">
    <UserControl.Resources>
        <sfdcStrings:LocalizedStrings x:Key="Localize"/>
    </UserControl.Resources>

  <Grid Background="{ThemeResource ApplicationForegroundThemeBrush}">
    <StackPanel Orientation="Vertical">
      <TextBlock Text="Contact List" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center" Foreground="Black"></TextBlock>
      <ListView  x:Name ="contactList" ItemsSource="{Binding}" HorizontalAlignment="Center" ScrollViewer.VerticalScrollMode="Auto">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Name}" Foreground="Black"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackPanel>
  </Grid>

    <Page.BottomAppBar>
        <CommandBar x:Name="controlBar">
            <AppBarButton x:Name="SwitchAccountBtn"
                              DataContext="account"
                              Label="{Binding Converter={StaticResource Localize}}"
                              Icon="Switch"
                              HorizontalAlignment="Center"
                              Click="SwitchAccount" VerticalAlignment="Center">
            </AppBarButton>
            <AppBarButton x:Name="logoutBtn"
                              Visibility="Collapsed"
                              DataContext="logout"
                              Label="{Binding Converter={StaticResource Localize}}"
                              Icon="HangUp"
                              HorizontalAlignment="Center"
                              Click="Logout" VerticalAlignment="Center">
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</native:NativeMainPage>
